<%- include ./../layout/header.ejs -%>
<% include ./../layout/partials/fake-loader-section.ejs %>
<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper custom-bg">
    <!-- Content Header (Page header) -->
    <%- include ./../layout/partials/page-header-section.ejs -%>
    <!-- Main content -->
    <form action="/admin/adminProfile" id="editProfileForm" method="post">
        <button type="submit" class="btn btn-success custom-save-btn custom-save-user custom-top">Save</button>
        &nbsp;<button type="reset" class="btn btn-success custom-save-btn custom-top custom-reset-btn">Reset</button>
        <a href="/admin/dashboard" class="btn btn-primary ml-10 custom-cancel-btn backButton" data-toggle="modal" data-target="#deleteConfirmModal"></a>
        <h1 class="custom-add-heading">Change profile</h1>
        <small class="custom-add-text"></small>
    <section class="content">

      <!-- Default box -->
      <div class="box custom-box">
          <!-- <div class="box-header with-border">
            <h3 class="box-title">Change profile</h3>
          </div> -->
          <div class="box-body">
              <!-- <div class="row"> -->
                <!-- /.col -->

                <%- include ./../layout/partials/alert-section.ejs -%>

                <div class="form-group row">
                  <div class="col-sm-6">
                    <input type="hidden" name="id" id="id"
                      value="<%= typeof responseData==='object'?responseData.id:'' %>">
                    <label for="firstname" class="">First name</label>
                    <input type="text" name="firstname" id="firstname" class="form-control" placeholder="First name" value="<%= typeof responseData==='object' && responseData ? responseData.firstname || responseData.first_name : '' %>">
                  </div>
                  <div class="col-sm-6">
                    <label for="lastname" class="">Last name</label>
                    <input type="text" name="lastname" id="lastname" class="form-control" placeholder="Last name" value="<%= typeof responseData==='object' && responseData ? responseData.lastname || responseData.last_name : '' %>">
                  </div>
                </div>

                <div class="form-group row">
                  <div class="col-sm-6">
                    <label for="email" class="">Email</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Email" readonly value="<%= typeof responseData==='object' && responseData ? responseData.email : '' %>">
                  </div>
                  <div class="col-sm-6">
                    <label for="username" class="">Username</label>
                    <input type="text" name="username" id="username" class="form-control" placeholder="username" value="<%= typeof responseData==='object' && responseData ? responseData.username : '' %>">
                  </div>
                </div>

                <div class="form-group row">
                  <div class="col-sm-6">
                    <label for="password" class="">Password</label>
                    <input type="password" name="password" id="password" class="form-control">
                  </div>
                  <div class="col-sm-6">
                    <label for="confirmpassword" class="">Confirmation Password</label>
                    <input type="password" name="confirmpassword" id="confirmpassword" class="form-control">
                  </div>
                </div>

                <!-- <div class="form-group row">
                  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 col-xl-3">
                      <button type="submit" class="btn btn-success">Save</button>
                      <button type="reset" class="btn btn-primary">Reset</button>
                  </div>
                </div> -->
                <!-- <div class="form-group row">
                  <div class="row submit-row">
                    <button type="submit" class="btn btn-success custom-save-btn custom-save-user custom-top">Save</button>
                    &nbsp;<button type="reset" class="btn btn-success custom-save-btn custom-top custom-reset-btn">Reset</button>
                    <a href="/admin/dashboard" class="btn btn-primary ml-10 custom-cancel-btn"></a>
                  </div>
                </div> -->
            </form>
          </div>
          <!-- /.box-body -->
          <!-- <div class="box-footer text-center">
          </div> -->
          <!-- /.box-footer-->
        </div>
      <!-- /.box -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
<%- include ./../layout/footer.ejs -%>
<script type="module" src="/js/profile.js"></script>

</body>
</html>
