    <script type="text/javascript">
    var dataTableoOBJ;
      $(function () {
        dataTableoOBJ = $("#advertisementList").dataTable({
          "lengthChange": true,
          "processing": true,
          "language": {
            "infoFiltered": "",
            processing: '<i style="color: rgb(41, 43, 44);" class="fa fa-circle-o-notch fa-spin fa-2x fa-fw"></i><span class="sr-only"></span> ',
            paginate: {
              previous: '<i class="fa fa-angle-left fa-5" aria-hidden="true"></i>',
              next:     '<i class="fa fa-angle-right fa-5" aria-hidden="true"></i>',
              },
          },
          "stateSave": true,
          "serverSide": true,
          "ajax": "/admin/advertisement-subscriptions/data",
          "createdRow": function (row, data, rowIndex) {
            // Per-cell function to do whatever needed with cells
            $.each($('td', row), function (colIndex) {
                // For example, adding data-* attributes to the cell
                $(this).attr('data-id', data.id);
            });
          },
          'columns': [
            { data: "id" },
            {
              data: "title",
            },
            {
              data: "Type.name",
            },
            {
              data: "duration",
              render: function (id, type, full, meta) {
                if (id == "Custom" && full.no_of_subscription_days) {
                  return `${id} (${full.no_of_subscription_days} days)`;
                } else {
                  return id;
                }
              }
            },
            {
              data: "currency_type",
            },
            {
              data: "amount",
            },
            {
              data: "id",
              searchable: false,
              sortable: false,
              render: function (id, type, full, meta) {
                console.log(full);
                if (full.advertisements && full.advertisements.id) {
                  return '<a href="/admin/advertisements/' + full.advertisements.id + '" data-toggle="tooltip" title="Edit Advertisement"><i class="fa fa-pencil text-black"></i></a>';
                } else {
                  return '<a href="/admin/advertisement?subscriptionId='+ id +'" data-toggle="tooltip" title="Add Advertisement"><i class="fa fa-plus text-black"></i></a>';
                }
              }
            },
          ],
          "order": [[ 0, "desc" ]],
        });
        if (performance.navigation.type === 1){
          var table = $('#advertisementList').DataTable();
          table.state.clear();
          table.search("").draw(); 
          table.column( '0:visible' ).order( 'desc' ).draw();
          table.page.len(10).draw();
          dataTableoOBJ.dataTable().fnFilter('', 6);
        }
        
      });
      
      $("#refresh-icon").click(function(event){
          var table = $('#advertisementList').DataTable();
          table.state.clear();
          table.search("").draw(); 
          table.column( '0:visible' ).order( 'desc' ).draw();
          table.page.len(10).draw();
          $("#table-filter").val('');
          dataTableoOBJ.dataTable().fnFilter('', 6);
      });
      $(".sidebar-menu li").removeClass("active");
      $(".menu__advertisements").addClass("active");
    </script>

