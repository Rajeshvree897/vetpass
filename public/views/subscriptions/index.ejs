  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper custom-bg">
    <!-- Content Header (Page header) -->
    <% include ../layout/partials/page-header-section.ejs %>
      <!-- Main content -->
      <div class="form-group button-row">
        <a href="/admin/subscription" class="btn btn-success float-right custom-add-btn">
          <i class="fa fa-plus" aria-hidden="true"> </i> Add New Subscription
        </a>
        <div class="clear-state">
          <h1 class="custom-add-heading custome-list-title">Subscriptions &nbsp;&nbsp;
            <i id="refresh-icon" style="font-size: 80%;" class="fa fa-refresh fa-lg" data-toggle="tooltip" title="Refresh"></i>
          </h1>
        </div>
      </div>
      <section class="content">

        <!-- Default box -->
        <div class="box">
