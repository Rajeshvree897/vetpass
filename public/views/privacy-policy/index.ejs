<%- include ./../layout/header.ejs -%>
<% include ./../layout/partials/fake-loader-section.ejs %>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper custom-bg">
    <!-- Content Header (Page header) -->
    <%- include ./../layout/partials/page-header-section.ejs -%>

      <!-- Main content -->
      <form action="<%= '/admin/privacyPolicy/update' %>" id="privacyPolicyForm" method="POST">
        <div class="form-group button-row">
          <button type="submit" class="btn btn-success custom-save-btn custom-top">Save</button>
          <a href="/admin/dashboard" class="btn btn-primary ml-10 custom-cancel-btn"></a>
          <h1 class="custom-add-heading">Privacy Policy</h1>
          <small class="custom-add-text">API ID : privacy-policy</small>
        </div>
      <section class="content">

        <!-- Default box -->
        <div class="box custom-box">
          <!-- <div class="box-header with-border">
          </div> -->
          <div class="box-body">
            <%- include ./../layout/partials/alert-section.ejs -%>

                <div class="form-group row">
                  <div class="col-sm-12">
                    <label for="privacy_policy_contents" class="">Privacy Policy</label>
                    <input type="hidden" name="id" id="id"
                      value="<%= typeof responseData==='object'?responseData.id:'' %>">
                    <input type="hidden" name="privacy_policy_contents" id="privacy_policy_contents"
                      value="<%= typeof responseData==='object'?responseData.privacy_policy_contents:'' %>">
                      <div id="privacyPolicy">
                        <%- typeof responseData==='object' ?responseData.privacy_policy_contents:'' %>
                      </div>
                  </div>
                </div>

          <!-- <div class="form-group row">
            <div class="row submit-row">
              <button type="submit" class="btn btn-success custom-save-btn custom-top">Save</button>
              <a href="/admin/dashboard" class="btn btn-primary ml-10 custom-cancel-btn"></a>
            </div>
          </div>
          <br/> -->
          </form>
        </div>
      </div>

        <!-- <div class="box-footer text-center">
        </div> -->
        <!-- /.box-footer-->
  <!-- /.box -->

  </section>
  <!-- /.content -->
  </div>
  <%- include ./../layout/footer.ejs -%>
    <script src="/plugins/ckeditor/ckeditor.js"></script>
    </body>
    <script>
      CKEDITOR.replace('privacyPolicy', {
        height: 400
      });

      CKEDITOR.instances.privacyPolicy.on('change', function () {
        $("#privacy_policy_contents").val(CKEDITOR.instances.privacyPolicy.getData());
      })
      $(".sidebar-menu li").removeClass("active");
      $(".menu__privacyPolicy").addClass("active");
    </script>

    </html>