<%- include ./../layout/header.ejs -%>
<% include ./../layout/partials/fake-loader-section.ejs %>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper custom-bg">
    <!-- Content Header (Page header) -->
    <%- include ./../layout/partials/page-header-section.ejs -%>

      <!-- Main content -->
      <form action="<%= '/admin/termsCondition/update' %>" id="termsConditionForm" method="POST">
        <div class="form-group button-row">
          <button type="submit" class="btn btn-success custom-save-btn custom-top">Save</button>
          <a href="/admin/dashboard" class="btn btn-primary ml-10 custom-cancel-btn"></a>
          <h1 class="custom-add-heading">Terms & Conditions</h1>
          <small class="custom-add-text">API ID : terms-and-conditions</small>
        </div>
      <section class="content">

        <!-- Default box -->
        <div class="box custom-box">
          <!-- <div class="box-header with-border">
          </div> -->
          <div class="box-body">
            <%- include ./../layout/partials/alert-section.ejs -%>

                <div class="form-group row">
                  <div class="col-sm-12">
                    <label for="terms_and_condition_contents" class="">Terms and Condition</label>
                    <input type="hidden" name="id" id="id"
                      value="<%= typeof responseData==='object'?responseData.id:'' %>">
                    <input type="hidden" name="terms_and_condition_contents" id="terms_and_condition_contents"
                      value="<%= typeof responseData==='object'?responseData.terms_and_condition_contents:'' %>">
                      <div id="termsCondition">
                        <%- typeof responseData==='object' ?responseData.terms_and_condition_contents:'' %>
                      </div>
                  </div>
                </div>

                <div class="form-group row">
                  <div class="row submit-row">
                    <button type="submit" class="btn btn-success custom-save-btn custom-top">Save</button>
                    <a href="/admin/dashboard" class="btn btn-primary ml-10 custom-cancel-btn"></a>
                  </div>
                </div>
              </form>
          </div>

          <!-- <div class="box-footer text-center">
          </div> -->
          <!-- /.box-footer-->
        </div>
        <!-- /.box -->

      </section>
      <!-- /.content -->
  </div>
  <%- include ./../layout/footer.ejs -%>
    <script src="/plugins/ckeditor/ckeditor.js"></script>
    </body>
    <script>
      CKEDITOR.replace('termsCondition', {
        height: 400
      });

      CKEDITOR.instances.termsCondition.on('change', function () {
        $("#terms_and_condition_contents").val(CKEDITOR.instances.termsCondition.getData());
      })
      $(".sidebar-menu li").removeClass("active");
      $(".menu__termsCondition").addClass("active");
    </script>

    </html>