{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".ts"
        ]
      }
    }
  },
  "rules": {
    "max-len": [
      2,
      {
        "code": 150
      }
    ],
    "import/extensions": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "no-unused-vars": "off",
    "import/prefer-default-export": "off",
    "camelcase": "off",
    "max-classes-per-file": "off",
    "max-lines": ["error", 350]
  }
}